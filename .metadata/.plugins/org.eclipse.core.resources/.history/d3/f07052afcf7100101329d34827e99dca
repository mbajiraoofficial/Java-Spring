package com.sample.UnitTestDemo;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

public class ArithematicTest {
	Arithematic ar=null;
	int a,b;
	
	@BeforeEach
	void setup()
	{
		ar=new Arithematic();
		a=10;
		b=47;
	}
	
	@Test
	void TestSum()
	{
		System.out.println("Testing Sum");
		assertEquals(a+b,ar.Sum(a, b) );
	}
	
	@Test
	void TestSub()
	{
		System.out.println("Testing Sub");
		assertEquals(a-b,ar.Sub(a, b) );
	}

}
